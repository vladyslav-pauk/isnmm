{
  "model_name": "aevb",
  "logger_watch": "parameters",
  "torch_seed": null,
  "train": {
    "monitor": {
      "monitor": "validation_loss",
      "mode": "min"
    },
    "lr": {
      "th": 0.001,
      "ph": 0.01
    },
    "mc_samples": 1000
  },
  "trainer": {
    "accelerator": "cpu",
    "max_epochs": 500,
    "limit_test_batches": 1,
    "limit_val_batches": 1,
    "log_every_n_steps": 10,
    "enable_progress_bar": false
  },
  "checkpoint": {
    "save_top_k": 1,
    "verbose": true
  },
  "early_stopping": {
    "patience": 50,
    "min_delta": 1e-4
  },
  "encoder": {
    "hidden_layers": {
      "h1":  300,
      "h2":  200
    },
    "activation": "leaky_relu",
    "output_activation": "none",
    "weight_initialization": "xavier_normal_"
  },
  "decoder": {
    "hidden_layers": {
      "h1":  400
      },
    "activation": "leaky_relu",
    "output_activation": "sigmoid",
    "weight_initialization": "xavier_normal_"
  },
  "schedule": {
    "repeats": 100,
    "parameters": {
      "train":
      {
        "lr": {
          "th": [0.001, 0.01],
          "ph": [0.01, 0.005]
        }
      },
      "data": {
        "SNR": [10, 20, 30],
        "seed": [29, 0, 42, 1, 2]
      }
    }
  }
}