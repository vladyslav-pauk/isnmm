{
  "model_name": "vasca",
  "logger_watch": "parameters",
  "torch_seed": null,
  "train": {
    "log_monitor": {
      "monitor": "mixture_mse_db",
      "mode": "min"
    },
    "lr": {
      "th": 0.001,
      "ph": 0.01
    },
    "mc_samples": 100
  },
  "trainer": {
    "accelerator": "cpu",
    "max_epochs": 500,
    "limit_test_batches": 1,
    "limit_val_batches": 1,
    "log_every_n_steps": 10,
    "enable_progress_bar": false
  },
  "checkpoint": {
    "monitor": "mixture_mse_db",
    "mode": "min",
    "save_top_k": 1,
    "verbose": true
  },
  "early_stopping": {
    "monitor": "mixture_matrix_change",
    "mode": "min",
    "patience": 30,
    "min_delta": 1e-4
  },
  "encoder": {
    "hidden_layers": {
      "h1":  64,
      "h2":  64,
      "h3":  32,
      "h4":  16
    },
    "activation": "relu",
    "output_activation": "none",
    "weight_initialization": "xavier_normal_"
  },
  "decoder": {
      "mixture_initialization": "none"
  },
  "schedule": {
    "repeats": 100,
    "parameters": {
      "train":
      {
        "lr": {
          "th": [0.001, 0.01],
          "ph": [0.01, 0.005]
        }
      },
      "data": {
        "SNR": [10, 20, 30],
        "seed": [29, 0, 42, 1, 2]
      }
    }
  }
}