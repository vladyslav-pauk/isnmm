{
  "model_name": "niva",
  "torch_seed": 0,
  "data_loader": {
    "module_name": "synthetic",
    "batch_size": 1000,
    "val_batch_size": 100,
    "split": [0.8, 0.1, 0.1],
    "num_workers": 4
  },
  "model": {
    "mc_samples": 10,
    "sigma": null
  },
  "encoder": {
    "constructor": "FCN",
    "hidden_layers": {
      "h1":  128,
      "h2":  128,
      "h3":  128
    },
    "hidden_activation": "ReLU",
    "output_activation": null,
    "weight_initialization": null,
    "bn_eps": null,
    "bn_momentum": 0.1
  },
  "decoder": {
    "constructor": "CNN",
    "hidden_layers": {
      "h1":  128,
      "h2":  128,
      "h3":  128
    },
    "hidden_activation": "ReLU",
    "output_activation": null,
    "weight_initialization": null,
    "mixture_initialization": null,
    "bn_eps": null,
    "bn_momentum": 0.1,
    "dropout_rate": null
  },
  "trainer": {
    "accelerator": "cpu",
    "max_epochs": 500,
    "log_every_n_steps": 4,
    "limit_val_batches": 1,
    "val_check_interval": 1.0,
    "limit_test_batches": 1,
    "gradient_clip_val": 0.5,
    "enable_progress_bar": false
  },
  "optimizer": {
    "name": "Adam",
    "params": {
    },
    "lr": {
      "decoder": {
        "linear": 0.001,
        "nonlinear": 0.001
      },
      "encoder": 0.001
    }
  },
  "checkpoint": {
    "monitor": "h_r_square",
    "mode": "max",
    "save_top_k": 1,
    "verbose": true
  },
  "early_stopping": {
    "monitor": "h_r_square",
    "mode": "max",
    "patience": 20,
    "min_delta": 1e-3
  }
}