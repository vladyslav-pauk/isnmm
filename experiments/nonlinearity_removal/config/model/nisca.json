{
  "model_name": "nisca",
  "torch_seed": 1,
  "data_loader": {
    "module_name": "synthetic",
    "split": [1.0, 0.0, 0.0],
    "batch_size": 100,
    "val_batch_size": 100,
    "num_workers": 4,
    "shuffle": true
  },
  "model": {
    "experiment_name": "nonlinearity_removal",
    "mc_samples": 1,
    "latent_dim": null,
    "sigma": null,
    "distance": "mse_loss",
    "unmixing": null,
    "prior": {
      "base_distribution": "Dirichlet"
    },
    "posterior": {
      "base_distribution": "MultivariateNormal"
    },
    "reparameterization": "LogitTransform"
  },
  "encoder": {
    "constructor": "CNN",
    "hidden_layers": {
      "h1": 128,
      "h2": 128,
      "h3": 128
    },
    "hidden_activation": "ReLU",
    "output_activation": null,
    "weight_initialization": null,
    "mixture_initialization": null,
    "bn_eps": null,
    "bn_momentum": 0.1,
    "dropout_rate": null,
    "groups": null,
    "positive": true,
    "scale": 5
  },
  "decoder": {
    "constructor": "CNN",
    "hidden_layers": {
      "h1":  128,
      "h2":  128,
      "h3":  128
    },
    "hidden_activation": "ReLU",
    "output_activation": null,
    "weight_initialization": null,
    "mixture_initialization": null,
    "bn_eps": null,
    "bn_momentum": 0.1,
    "dropout_rate": null
  },
  "optimizer": {
    "name": "Adam",
    "params": {
    },
    "lr": {
      "decoder": {
        "linear_mixture": 1e-3,
        "nonlinear_transform": 1e-3
      },
      "encoder": 1e-3
    },
    "scheduler": null,
    "scheduler_params": {
      "interval": "epoch",
      "frequency": 1,
      "monitor": "r_square",
      "strict": true
    }
  },
  "trainer": {
    "accelerator": "cpu",
    "devices": 1,
    "max_epochs": 1000,
    "gradient_clip_val": null,
    "limit_val_batches": 1,
    "limit_test_batches": 1,
    "log_every_n_steps": 5,
    "val_check_interval": 1.0,
    "check_val_every_n_epoch": 10,
    "enable_progress_bar": false
  },
  "checkpoint": {
    "monitor": "r_square",
    "mode": "max",
    "save_top_k": 1,
    "verbose": true
  },
  "early_stopping": {
    "monitor": "r_square",
    "mode": "max",
    "patience": 100,
    "min_delta": 1e-5
  }
}